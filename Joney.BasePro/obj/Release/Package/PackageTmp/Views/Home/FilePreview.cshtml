<body>
    <div> 
        <div class="dvList">
            <div id="uploader" class="wu-example">
                <!--用来存放文件信息-->
                <div id="thelist" class="uploader-list"></div>
                <div class="btns">
                    <div id="picker"><i></i></div>
                    <div id="btnuper"><i></i></div>
