<style>
    #goToTop {
        margin-top: -50px;
        position: fixed;
        right: 10px;
        top: 50%;
        width: 58px;
        z-index: 480;
    }
    
#top {
    width: 48px;
    height: 48px;
    cursor: pointer;
    background: url("../Images/top.png") no-repeat;
}

#bot {
    width: 48px;
    height: 48px;
    cursor: pointer;
    background: url("../Images/bottom.png") no-repeat;
}

    #top, #bot a {
        display: inline-block;
    }
        #goToTop a.go-1 {
            background-position: 0 -204px;
            height: 36px;
        }

        #goToTop a.go-2 {
            background-position: 0 -242px;
            height: 63px;
            margin-top: 2px;
        }

        #goToTop a.go-1, #goToTop a.go-2 {
            display: block;
            width: 58px;
        }

        #goToTop a {
            background-image: url("../Images/ipics.png");
            background-repeat: no-repeat;
        }

</style>
<div class="bottom"></div>
<div id="goToTop">
    <div id="top" onclick='javascript: scrollToTopAndDown(1);'></div>
    @*<a rel="nofollow" title="联系客服" onfocus="this.blur()" href="http://wpa.qq.com/msgrd?v=3&uin=382232865&site=qq&menu=yes" target="imLogin" class="go-2 ipics" style="cursor: pointer"></a>*@
    <div id="bot" onclick='javascript: scrollToTopAndDown(0);'></div>
</div>
<script src="~/Scripts/move-top.js"></script>
<script type="text/javascript">
    function scrollToTopAndDown(obj) {
        if (obj == 1) {
            $("html,body").animate({ scrollTop: 0 }, 800);
        }
        else if (obj == 0) {
            $('html,body').animate({ scrollTop: $('.bottom').offset().top }, 800);
        }
    }
</script>